<%= form_for @user do |f| %>
<p>
  <%= f.label :"昵称" %><br>
  <%= f.text_field :nick_name %>
</p>
<p>
  <%= f.label :"用户名" %><br>
  <%= f.text_field :username %>
</p>
<p>
  <%= f.label :"密码" %><br>
  <%= f.password_field :password %>
</p>
<p>
  <%= f.label :"确认密码" %><br>
  <%= f.password_field :password_confirmation %>
</p>
<p>
  <%= f.label :"邮箱" %><br>
  <%= f.text_field :email %>
</p>
<p>
  <%= f.label :"手机号" %><br>
  <%= f.text_field :phone_num%>
</p>
<p>
  <%= f.label :"性别" %><br>
  <%= f.radio_button(:sex, "1") %>
  <%= f.label(:sex_1, "男") %>
  <%= f.radio_button(:sex, "0") %>
  <%= f.label(:sex_0, "女") %>
</p>
<p>
  <%= f.submit :"提交" %>
</p>
<% end %>
