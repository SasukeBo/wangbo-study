<%= form_for @user do |f| %>
  <%= render 'shared/error_messages'%>

  <%= f.label :"昵称" %><br>
  <%= f.text_field :nick_name %>
  
  <%= f.label :"用户名" %><br>
  <%= f.text_field :username %>
  
  <%= f.label :"密码" %><br>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation, "确认密码" %><br>
  <%= f.password_field :password_confirmation %>
  
  <%= f.label :"邮箱" %><br>
  <%= f.text_field :email %>
  
  <%= f.label :"手机号" %><br>
  <%= f.text_field :phone_num %>
  
  <%= f.label :"性别" %><br>
  <%= f.radio_button(:sex, "1") %>
  <%= f.label(:sex_1, "男") %>
  <%= f.radio_button(:sex, "0") %>
  <%= f.label(:sex_0, "女") %>
  
  <%= f.submit :"提交", class: "btn btn-primary" %>
<% end %>
