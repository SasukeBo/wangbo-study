<!DOCTYPE html>
<html>
  <%= render 'layouts/head'%>
  <body>
    <%= render 'layouts/header'%>
    <div class="container">
      <h1>注册</h1>
      <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <div class="container">
        <%= render 'form'%>
        <%= link_to '返回', articles_path %>
      </div>
    </div>
  </body>
</html>
