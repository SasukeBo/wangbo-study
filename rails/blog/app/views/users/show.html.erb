<% provide(:title, '我的信息')%>
    <div class="row">
      <aside class="clo-md-4">
        <section class="user_info">
          <h1>
            <%= gravatar_for @user %>
            <%= @user.nick_name %><br>
          </h1>
        </section>
      </aside>
      <div class="col-md-8">
        <% if @user.microposts.any? %>
          <h3>微博 (<%= @user.microposts.count %>)</h3>
          <ol class="microposts">
            <%= render @microposts %>
          </ol>
          <%= will_paginate @microposts %>
        <% end %>
      </div>
    </div>
