<% provide(:title, "找回密码") %>

<h1>找回密码</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "发送验证邮件", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
